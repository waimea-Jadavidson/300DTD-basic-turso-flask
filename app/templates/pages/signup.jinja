{#=====================================================
  SignUp page
  - Adding a new User
=====================================================#}

{% extends 'pages/base.jinja' %}


{% block title %}

    Flask Demo - User Sign Up

{% endblock %}


{% block content %}

    <h1>User Sign Up</h1>

    <article>

        <h3>Sign Up</h3>

        <form action="/add-user" method="POST">

            <input
                type="text"
                name="name"
                placeholder="Name"
                required
            >

            <input
                type="text"
                name="username"
                placeholder="Username"
                required
            >

            <input
                type="password"
                name="password"
                min="0"
                placeholder="Password"
                required
            >

            <button>Sign Up</button>

        </form>

    </article>

{% endblock %}

